doctype html

html
	head
		meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
		title MPRS online web portal (universal search)
		link(href='/stylesheets/style.css', rel='stylesheet')
		link(href='/stylesheets/jquery.dataTables.css', rel='stylesheet')
		link(href='//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css', rel='stylesheet')

		script(src='https://code.jquery.com/jquery-2.1.3.js')
		script(src='https://code.jquery.com/ui/1.11.2/jquery-ui.js')
		script(src='/javascripts/jquery.dataTables.min.js')

		script(src='/javascripts/typeahead.bundle.js')
		script(src='/javascripts/handlebars-v2.0.0.js')
		script(src='/front_JS/searchFrontEnd.js')

		script(src='https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.3/d3.js')
		script(src='https://rawgit.com/PMSI-AlignAlytics/dimple/master/dist/dimple.latest.js')
	
		script(type='text/javascript').
			var recentLotArray =!{JSON.stringify(recentLotArray)};
			var testerArray =!{JSON.stringify(testerArray)};
			var handlerArray =!{JSON.stringify(handlerArray)};
			var deviceArray =!{JSON.stringify(deviceArray)};

	body
		header#header
			h3 Maintenance Performance Reporting System
		main
			section#formSection
				form#queryForm(method='get')
					#custom-templates
						input.typeahead#keystr(type='text', placeholder='lot id, tester id, handler id, device, kyec, spil, xap, atk', size = 60, name='keystr')
					
					input#btn_search_query(type='submit')

			section#infoBtnSection
				button#factory.infoButton(disabled='') Factory
				button#tester.infoButton(disabled='') Tester
				button#handler.infoButton(disabled='') Handler
				button#lotid.infoButton(disabled='') lotid
				button#grade.infoButton(disabled='') grade
				button#dev.infoButton(disabled='') device
				button#pkg.infoButton(disabled='') package

			section#resultSection		
				#tabs
					ul
						li
							a(href='#Data') Data			
						li
							a(href='#Graph') Graph
					#Data
						#ttResult

					#Graph
						.boxHorizontal
							.left#OEE_total
							.blank
							.right#OEE_weekly
						.boxHoritzontal
							.left#OEE_93k
							.blank
							.right#OEE_t2k
					#ChartTab1
					#ChartTab2
					#ChartTab3
					#ChartTab4

		nav#nav
			br
			br
			br
			p
				input#lastW(name='timeBtnGrp', type='radio', value='lastW')
				| last week
				br
				br
				input#lastM(name='timeBtnGrp', type='radio', value='lastM')
				| last month
				br
				br
				input(name='timeBtnGrp', type='radio', value='period')
				| From
				br
				br
				input#startDT.radioBtnTime.datepicker(type='text')
				br
				h5#btnLabel To
				br
				br
				input#endDT.radioBtnTime.datepicker(type='text')
				br
				br
				br
				br
				br
				br
			textarea#msgArea(rows='8', cols='28')
				| welcome to MPRS universal query!


